<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.startandroid1.taximanager.activities.AdminActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Users"
        android:id="@+id/btnAdminPageTU"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnAdminPageTR"
        android:layout_alignStart="@+id/btnAdminPageTR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Requests"
        android:id="@+id/btnAdminPageTR"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btnAdminPageTU"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Feedbacks"
        android:id="@+id/btnAdminPageTF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btnAdminPageTR"
        android:layout_alignStart="@+id/btnAdminPageTR" />

</RelativeLayout>
